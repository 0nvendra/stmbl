NRT(
  float e = 0.0;
  unsigned char buf[4 + 2];

  e = PIN(wave0);
  e = (e + PIN(offset0)) * PIN(gain0);
  e = CLAMP(e + 128,1,255);
  buf[1] = (int)e;

  e = PIN(wave1);
  e = (e + PIN(offset1)) * PIN(gain1);
  e = CLAMP(e + 128,1,255);
