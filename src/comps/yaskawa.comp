      int i = 0;
      uint32_t current;
      uint32_t last = (buf[0] & GPIO_Pin_11);
      uint32_t first_edge = 0;
      for(int j = 1; j < 20; j++){
         current = (buf[j] & GPIO_Pin_11);
         if(current != last){
            first_edge = j;
            break;
         }
         last = current;
      }
      
      last = (buf[first_edge] & GPIO_Pin_11);
      for(int j = first_edge+3; j < 20; j+=3){
         current = (buf[j] & GPIO_Pin_11);
         if(current == last && last != 0){
            first_edge = j;
            break;
         }
         last = current;
      }
      
      uint32_t df = 0;
      uint32_t ones = 0;
      uint32_t j = 7;
      for(int i = j;i<100;i++){
         if(buf[i*6+first_edge+1]&GPIO_Pin_11){
            df += 2;
         }
         if(buf[i*6+first_edge+4]&GPIO_Pin_11){
            df += 1;
         }
         switch(df){
            case 0:
               data[i-j] = '!';
               break;
            case 1:
               data[i-j] = '0';
               ones = 0;
               break;
            case 2:
               ones++;
               data[i-j] = '1';
               if(ones >= 5){
                  ones = 0;
                  i++;
                  j++;
               }
               break;
            case 3:
               data[i-j] = '?';
               break;
            default:
               data[i-j] = 'X';
               break;
         }
         df = 0;
