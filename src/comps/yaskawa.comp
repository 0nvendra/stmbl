   DMA_InitStructure.DMA_Memory0BaseAddr = (uint32_t)&buf2;
   DMA_InitStructure.DMA_DIR = DMA_DIR_MemoryToPeripheral;
   DMA_InitStructure.DMA_BufferSize = pos;
