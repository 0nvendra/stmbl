#define NUM_OF_SAMPLES  800
#define TIM_FREQ 168.0
#define TIM_DIV 7.0
#define SIG_FREQ 8.0
#define OVER (TIM_FREQ / TIM_DIV / SIG_FREQ)//one bit
#define OFFSET (OVER / 2.0)//half bit
#define SIG_POS_START 0

